<form action="" method="POST" class="js-checkout-form checkout-form">
    <div class="row">
        <div class="col-xs-8 col-sm-12 col-sm-offset-2 form-group">
            <div class="input-group">
                <span class="form-control col-sm-2">
                     <i class="fa fa-user"></i>
                 </span>
                <input data-stripe="name" class="form-control" type="text" autocomplete="off" id="card-name" required
                       placeholder="Titulaire"/>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-8 col-sm-12 col-sm-offset-2 form-group">
            <div class="input-group">
                <span class="form-control col-sm-2">
                     <i class="fa fa-credit-card"></i>
                 </span>
                <input data-stripe="number" type="text" autocomplete="off" class="form-control js-cc-number"
                       id="card-number" required placeholder="NumÃ©ro de carte"/>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-6 col-sm-6 col-sm-offset-2 form-group">
            <div class="input-group">
                <span class="form-control col-sm-4">
                     <i class="fa fa-calendar-o"></i>
                 </span>
                <input data-stripe="exp" type="text" size="4" autocomplete="off" class="form-control js-cc-exp"
                       id="card-expiration" required="required" placeholder="mm/aa"/>
            </div>
        </div>
        <div class="col-xs-6 col-sm-6 form-group">
            <div class="input-group">
                <span class="form-control col-sm-4">
                     <i class="fa fa-lock"></i>
                 </span>
                <input data-stripe="cvc" type="text" size="4" autocomplete="off" class="form-control js-cc-cvc"
                       id="card-cvc" required="required" placeholder="CVC"/>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-9 col-sm-9 col-sm-offset-2 form-group">
            <div class="input-group">
                <span class="form-control input-group-addon col-sm-2">
                     <i class="fa fa-map-marker"></i>
                 </span>

            <input type="text" autocomplete="off" class="form-control" id="card-zip" placeholder="Code postal"/>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-xs-8 col-sm-6 col-sm-offset-2 text-center">
            <button type="submit" class="js-submit-button btn btn-lg btn-danger">
                Payer la commande
            </button>
        </div>
    </div>
</form>
